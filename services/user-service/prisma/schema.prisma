generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @map("_id") @default(auto()) @db.ObjectId
  name      String
  email     String @unique
  passwordHash String?
  refreshTokens Json?
  failedAttempts Int @default(0)
  lockoutUntil DateTime?
  companyId String?
  role      String @default("user")
  createdAt DateTime @default(now())
}
